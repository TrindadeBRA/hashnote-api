APP_NAME="HashNote API"
APP_VERSION=1.0.0
APP_ENV=development

# Database
DB_PATH=data/app.sqlite

# Blockchain
BLOCKCHAIN_MODE=server_sign

# RPC URL Ethereum (Infura/MetaMask Developer)
BLOCKCHAIN_RPC_URL=https://sepolia.infura.io/v3/SUA_API_KEY

# Contrato inteligente (opcional, formato: 0x...)
BLOCKCHAIN_CONTRACT_ADDRESS=

# Chave privada wallet (modo server_sign, SEM 0x, NUNCA commitar!)
BLOCKCHAIN_PRIVATE_KEY=SUA_CHAVE_PRIVADA_AQUI

# Rede: sepolia | mainnet | localhost
BLOCKCHAIN_NETWORK=sepolia

# Security
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=3600
JOB_TOKEN=change-me-in-production

# Logging
LOG_LEVEL=INFO