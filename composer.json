{
    "name": "trindadebra/hashnote-api",
    "description": "API minimalista para registrar mensagens na blockchain",
    "type": "project",
    "require": {
        "php": ">=8.2",
        "slim/slim": "^4.12",
        "slim/psr7": "^1.6",
        "php-di/php-di": "^6.1",
        "php-di/slim-bridge": "^3.4",
        "vlucas/phpdotenv": "^5.5",
        "monolog/monolog": "^3.5",
        "swagger-api/swagger-ui": "^5.0",
        "kornrunner/keccak": "^1.1",
        "sc0vu/web3.php": "^0.1",
        "kornrunner/ethereum-offline-raw-tx": "^0.9",
        "kornrunner/ethereum-address": "^0.4"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0"
    },
    "autoload": {
        "psr-4": {
            "HashNote\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "HashNote\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "setup": "php scripts/setup.php"
    }
}

